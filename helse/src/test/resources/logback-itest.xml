<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%t, %d, %-5p, %C:%L] - %.-100000m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="no.nav.skanmotovrig" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

<!--    <logger name="org.apache.camel" level="DEBUG" additivity="false">-->
<!--        <appender-ref ref="CONSOLE"/>-->
<!--    </logger>-->
<!--    <logger name="org.apache.sshd" level="DEBUG" additivity="false">-->
<!--        <appender-ref ref="CONSOLE"/>-->
<!--    </logger>-->

    <logger name="com.github.tomakehurst.wiremock" level="WARN" additivity="false"/>
    <logger name="wiremock.org" level="WARN" additivity="false"/>
    <logger name="WireMock" level="WARN" additivity="false"/>
</configuration>